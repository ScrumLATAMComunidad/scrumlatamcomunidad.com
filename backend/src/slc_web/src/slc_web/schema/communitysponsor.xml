<?xml version="1.0" encoding="utf-8"?>
<model xmlns="http://namespaces.plone.org/supermodel/schema"
       xmlns:form="http://namespaces.plone.org/supermodel/form"
       xmlns:i18n="http://xml.zope.org/namespaces/i18n"
       xmlns:indexer="http://namespaces.plone.org/supermodel/indexer"
       xmlns:security="http://namespaces.plone.org/supermodel/security"
       i18n:domain="slc_web"
>
  <schema>
    <fieldset description="Sponsor Basic Data"
              label="Basic Data"
              name="basic_data"
    >
      <field indexer:searchable="true"
             name="name"
             type="zope.schema.Text"
      >
        <description>Sponsor Name</description>
        <title>Name</title>
      </field>
      <field indexer:searchable="true"
             name="information"
             type="plone.app.textfield.RichText"
      >
        <description>Sponsor Information</description>
        <title>Information</title>
      </field>
      <field name="logo_photo"
             type="plone.namedfile.field.NamedBlobImage"
      >
        <description>Sponsor Logo or Photo</description>
        <title>Logo/Photo</title>
      </field>
      <field indexer:searchable="true"
             name="type"
             security:read-permission="slc_web.communitysponsor.view"
             type="zope.schema.Choice"
      >
        <description>Sponsor Type</description>
        <title>Type</title>
        <values>
          <element>Company</element>
          <element>Person</element>
        </values>
      </field>
    </fieldset>
    <fieldset description="Sponsor Contact Data"
              label="Contact Data"
              name="contact_data"
    >
      <field form:validator="slc_web.validators.isHTTP"
             indexer:searchable="true"
             name="website"
             type="zope.schema.URI"
      >
        <description>Enter a http:// or https:// web address</description>
        <required>False</required>
        <title>Web Site</title>
      </field>
      <field form:validator="slc_web.validators.isEmail"
             name="email"
             security:read-permission="slc_web.communitysponsor.view"
             type="plone.schema.email.Email"
      >
        <description>Sponsor Email</description>
        <required>False</required>
        <title>Email</title>
      </field>
      <field form:validator="slc_web.validators.isPhone"
             name="phone"
             security:read-permission="slc_web.communitysponsor.view"
             type="zope.schema.Text"
      >
        <description>Sponsor Contact Phone</description>
        <required>False</required>
        <title>Phone</title>
      </field>
    </fieldset>
  </schema>
</model>
